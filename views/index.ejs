<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Giriş</title>
  <!-- Google Fonts - Roboto -->
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.15.0/font/bootstrap-icons.css">
  <link rel="stylesheet" href="/styles/index.css">
</head>

  <div class="container">
    <div class="login-container">
      <h1 class="text-center"><i class="bi bi-door-open"></i> Giriş Paneli</h1>
      <form action="/login" method="post">
        <div class="form-group">
          <label for="username"><i class="bi bi-person"></i> Kullanıcı İsmi:</label>
          <input type="text" id="username" name="username" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="password"><i class="bi bi-shield-lock"></i> Şifre:</label>
          <div class="input-group">
            <input type="password" id="password" name="password" class="form-control" required>
            <div class="input-group-append">
              <span class="input-group-text password-toggle" onclick="togglePasswordVisibility()">
                <i class="bi bi-eye"></i>
              </span>
            </div>
          </div>
        </div>
        <button type="submit" class="btn btn-primary btn-block"><i class="bi bi-box-arrow-in-right"></i> Giriş</button>
      </form>
      <br>
      <p class="text-center">Hesabınız Mı Yok? <a href="/register" class="register-button"><i class="bi bi-person-plus"></i> Kaydolmak</a></p>
      <p class="text-center message"><%= message %></p>
    </div>
  </div>

  <!-- Bootstrap JS, jQuery, Popper.js -->
  <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  <!-- JavaScript for live search -->
  <script src="/scripts/index.js"></script>
</body>
</html>
